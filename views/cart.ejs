<section class="small-container cart-page">
  <table class="cart-table">
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
    <% for( let product of products ) { %>
    <tr>
      <td>
        <div class="cart-info">
          <img src="<%= product.imgSrc %>" alt="<%= product.name %>" />
          <div>
            <p><%= product.name %></p>
            <small>Price: Ghc <%= product.price %>.00</small>
            <br />
            <a href="cart/<%= product.id %>" id="<%= product._id %>">Remove</a>
          </div>
        </div>
      </td>
      <td>
        <input type="number" value="<%= product.quantity %>" class="bigger" />
      </td>
      <td class="subtotal">Ghc <%= product.subTotal %>.00</td>
    </tr>
    <% } %>
  </table>
  <div class="total-price">
    <button id="checkout">checkout</button>
    <table>
      <tr>
        <td>Total</td>
        <td id="total">Ghc <%= Total%>.00</td>
      </tr>
    </table>
  </div>
</section>
<script src="/scripts/cart.js"></script>
